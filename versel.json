{
    "builds": [
      {
        "src": "server.js",
        "use": "@vercel/node"
      },
      {
        "src": "client/package.json",
        "use": "@vercel/static-build",
        "config": { "distDir": "client/build" }
      }
    ],
    "routes": [
      { "src": "/api/(.*)", "dest": "http://localhost:3000/api/$1" },
      { "src": "/(.*)", "dest": "/client/$1" }
    ]
  }
  